<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="26dp"
    android:layout_marginStart="26dp"
    android:layout_marginTop="32dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.inq.eslamwael74.meme.Widgets.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/human_placeholder" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_examination"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:srb_borderColor="@color/white"
            app:srb_fillColor="@color/yellow"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_starBackgroundColor="@color/white"
            app:srb_starBorderWidth="0.01"
            app:srb_starSize="15dp"
            app:srb_stepSize="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_right" />

            <ImageView
                android:id="@+id/message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/message_icon"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:id="@+id/img_true2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/img_right"
                android:layout_marginLeft="18dp" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/message_icon"
                android:layout_marginLeft="8dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

